# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/voisafe
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/voisafe

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Encryption Configuration (for ComplaintTracking)
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_this
# Must be 32 characters for AES-256

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
SUPER_ADMIN_EMAIL=admin@college.edu
SUPER_ADMIN_PASSWORD=change_this_password
